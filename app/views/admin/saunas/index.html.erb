<h1>全国のサウナ一覧</h1>
<%= link_to "サウナを登録する", admin_saunas_new_path %>


<table>
    <thead>
        <tr>
            <td>店名</td>
            <td>料金</td>
            <td>営業時間</td>
            <td>都道府県</td>
            <td>住所</td>
            <td>レビュー</td>
        </tr>
    </thead>
    <% @saunas.each do |sauna| %>
    <tbody>
        <tr>
            <td><%= link_to sauna.name, admin_saunas_show_path(sauna) %></td>
            <td><%= sauna.price %>円</td>
            <td><%= sauna.business_hour %></td>
            <td><%= sauna.prefecture %></td>
            <td><%= sauna.address %></td>
            <td><%= link_to "#{sauna.reviews.count}件", admin_reviews_index_path(sauna.id) %></td>
        </tr>
    </tbody>
    <% end %>
</table>

<%= paginate @saunas %>
