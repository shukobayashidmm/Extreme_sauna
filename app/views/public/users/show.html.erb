<div class="container">
    <div class="row">
        <div class="col-7 ml-2 mx-auto">
        <h1>マイページ</h1>
        <table class="table">
            <tbody>
            <tr>
                <td>名前</td>
                <td><%= @user.last_name + @user.first_name %></td>
            </tr>
            <tr>
                <td>フリガナ</td>
                <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
            </tr>
            <tr>
                <td>郵便番号</td>
                <td><%= @user.postcode %></td>
            </tr>
            <tr>
                <td>住所</td>
                <td><%= @user.address %></td>
            </tr>
            <tr>
                <td>電話番号</td>
                <td><%= @user.telephone_number %></td>
            </tr>
            <tr>
                <td>生年月日</td>
                <td><%= @user.birthday %></td>
            </tr>
            <tr>
                <td>メールアドレス</td>
                <td><%= @user.email %></td>
            </tr>
            <tr>
                <td><% if @user.email == 'guest@example.com' %>
                      <p>ゲストユーザーはユーザー情報の編集ができません。</p>
                    <% else %>
                      <%= link_to "編集する", public_users_infomation_edit_path, class: "btn btn-success" %>
                    <% end %>
                </td>
            </tr>
            </tbody>
        </table>
        </div>
    </div>
</div>
