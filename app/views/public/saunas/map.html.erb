<h1><%= @sauna.name %>への行き方はこちら</h1>
<p>都道府県：<%= @sauna.prefecture %></p>
<p>住所：<%= @sauna.address %></p>

<div id="map"></div>
<style>
     #map {
     height: 500px;
     width: 70%;
    }
</style>
<script>
  function initMap() {
    var uluru = {lat: <%= @sauna.latitude %>, lng: <%= @sauna.longitude %>};
    var map = new google.maps.Map(document.getElementById('map'), {
    zoom: 16,
    center: uluru
    });
    var marker = new google.maps.Marker({
      position: uluru,
      map: map
    });
       }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAj-NweavtbXsBY8RnDkChZ0q38eTE-dCw&callback=initMap"async defer></script>